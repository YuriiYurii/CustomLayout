<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="globallogic.yuriitsap.com.customlayout">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name=".DrawingActivity"
                android:label="@string/title_activity_drawing">
        </activity>
        <activity
                android:name=".ResolveTouchEventsActivity"
                android:label="@string/title_activity_resolve_touch_events">
        </activity>
        <activity
                android:name=".FrameTrial"
                android:label="@string/title_activity_frame_trial">
        </activity>
        <activity
                android:name=".LayoutActivity"
                android:label="@string/title_activity_layout"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".TouchEventTrial"
                android:label="@string/title_activity_touch_event_trial">

        </activity>
        <activity
            android:name=".OffsetTrial"
            android:label="@string/title_activity_offset_trial" >

        </activity>
    </application>

</manifest>
