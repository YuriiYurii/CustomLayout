<globallogic.yuriitsap.com.customlayout.CustomLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:random_layout="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_layout"
        random_layout:overlap="true"
        tools:context=".MainActivity">
    <Button android:id="@+id/addButton"
            android:text="@string/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button android:id="@+id/resizeButton"
            android:text="@string/resize_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="First text view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Second text view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="3 text view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="4 text view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="5 text view"
            android:layout_width="wrap_content"
            android:layout_height="115dp"/>
    <TextView
            android:text="6 text view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</globallogic.yuriitsap.com.customlayout.CustomLayout>
